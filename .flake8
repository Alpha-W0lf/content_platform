[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .venv,
    .env,
    env,
    .tox,
    site-packages,
    */migrations/*,
    node_modules

# Recommended line length to match black's default
max-line-length = 88

# Ignore some common errors:
# E203: Whitespace before ':' (conflicts with black)
# W503: Line break before binary operator (conflicts with black)
extend-ignore = E203, W503

# Select specific error codes to enable
select = C,E,F,W,B,B950
