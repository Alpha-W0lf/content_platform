[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    *venv*,
    .env,
    env,
    .tox,
    venv/*,
    .venv/*,
    */venv/*,
    */.venv/*,
    site-packages,
    */migrations/*,
    node_modules,
    */.pytest_cache/*,
    */.mypy_cache/*,
    .pytest_cache,
    .mypy_cache

# Recommended line length to match black's default
max-line-length = 220

# Ignore some common errors:
# E203: Whitespace before ':' (conflicts with black)
# W503: Line break before binary operator (conflicts with black)
# E402: Module level import not at top of file
extend-ignore = E203, W503, E402, E501, E261

# Select specific error codes to enable
select = C,E,F,W,B,B950

dummy_setting = test
