[flake8]
# Line length and basic rules
max-line-length = 220

# Explicitly list all errors to ignore
ignore = 
    # Allow module level imports not at top of file
    E402,
    # Line break before binary operator
    W503,
    # Line too long (we use B950 instead from flake8-bugbear)
    E501,
    # Multiple spaces before operator
    E221,
    # Multiple spaces after operator
    E222,
    # Multiple spaces after ':'
    E241,
    # Multiple spaces before ':'
    E242,
    # Whitespace before ':'
    E203,
    # Multiple spaces after ','
    E241,
    # Missing whitespace around operator
    E225

# Which errors to check for
select = C,E,F,W,B,B950

# Exclude patterns
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    *venv*,
    .env,
    env,
    .tox,
    venv/*,
    .venv/*,
    */venv/*,
    */.venv/*,
    site-packages,
    */migrations/*,
    node_modules,
    */.pytest_cache/*,
    */.mypy_cache/*,
    .pytest_cache,
    .mypy_cache

# Make the tool verbose so we can debug any config issues
verbose = 1

dummy_setting = test
